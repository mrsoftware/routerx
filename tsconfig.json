{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./src/**/*.ts",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "./dist",
    "./test"
  ]
}